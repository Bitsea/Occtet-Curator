<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://caption.title"
      focusComponent="suggestionsDataGrid">
    <data>
        <collection id="suggestionsDc"
                    class="eu.occtet.bocfrontend.entity.Suggestion">

            <loader id="suggestionsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Suggestion e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <vbox width="100%">
            <hbox width="100%">
                <genericFilter id="genericFilter" dataLoader="suggestionsDl" themeNames="small"
                               width="80%" alignSelf="START">
                    <properties include=".*"/>
                    <conditions> </conditions>
                </genericFilter>
                <simplePagination id="pagination" dataLoader="suggestionsDl" alignSelf="END"/>
            </hbox>
            <dataGrid classNames="occtet-grid" id="suggestionsDataGrid"
                      width="100%"
                      height="30em"
                      maxHeight="100%"
                      dataContainer="suggestionsDc"
                      columnReorderingAllowed="true">
                <actions>
                    <action id="createAction" type="list_create"/>
                    <action id="editAction" type="list_edit"/>
                    <action id="removeAction" type="list_remove"/>
                    <action id="refreshAction" type="list_refresh"/>
                </actions>
                <columns resizable="true">
                    <column property="context" header="msg://context"/>
                    <column property="sentence" header="msg://Sentence"/>
                </columns>
            </dataGrid>
            <hbox id="lookupActions" visible="false">
                <button id="selectButton" action="selectAction"/>
                <button id="discardButton" action="discardAction"/>
            </hbox>
            <hbox id="buttonsPanel" classNames="buttons-panel">
                <button id="createButton" action="suggestionsDataGrid.createAction"/>
                <button id="editButton" action="suggestionsDataGrid.editAction"/>
                <button id="removeButton" action="suggestionsDataGrid.removeAction"/>
            </hbox>
        </vbox>
    </layout>
</view>
