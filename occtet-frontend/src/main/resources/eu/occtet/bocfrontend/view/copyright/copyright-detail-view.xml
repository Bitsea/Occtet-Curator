<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://copyrightDetailView.title"
      focusComponent="form">
    <data>
        <instance id="copyrightDc"
                  class="eu.occtet.bocfrontend.entity.Copyright">
            <fetchPlan extends="_base">
                <property name="codeLocations" fetchPlan="_base"/>
                <property name="licenses" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="copyrightDl">
                <query>
                    <![CDATA[
                    select distinct c
                    from Copyright c
                    left join c.codeLocations cl]]>
                </query>

            </loader>
            <collection id="licenseDataGrid" property="licenses"/>
            <collection id="codeLocationsDc" property="codeLocations"/>
        </instance>

        <collection id="licenseDc"
                    class="eu.occtet.bocfrontend.entity.License">
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout width="100%">
        <tabSheet width="100%" themeNames="no-padding" height="100%">
            <tab id="generalInformationTab" label="msg://eu.occtet.bocfrontend.view.copyright/tab.general">
                <vbox id="form" width="100%">
                    <vbox>
                        <textField id="copyrightTextField" property="copyrightText" dataContainer="copyrightDc"
                                   label="Name" minWidth="100%"/>
                        <hbox>
                            <checkbox id="curatedField" dataContainer="copyrightDc" property="curated" label="msg://eu.occtet.bocfrontend.entity/Copyright.curated"/>
                            <checkbox id="garbageField" dataContainer="copyrightDc" property="garbage" label="msg://eu.occtet.bocfrontend.entity/Copyright.garbage"/>
                            <checkbox id="aiControlledField" dataContainer="copyrightDc" property="aiControlled"
                                      label="msg://aiControlled"/>
                        </hbox>
                        <dataGrid classNames="occtet-grid" id="codeLocationsGrid"
                                  dataContainer="codeLocationsDc"
                                  width="100%"
                                  height="40em">
                            <columns>
                                <column property="filePath" header="msg://eu.occtet.bocfrontend.entity/CodeLocation.filePath"/>
                            </columns>
                        </dataGrid>
                        <hbox id="detailActions"  alignItems="CENTER" width="100%" justifySelf="CENTER">
                            <button id="saveAndCloseButton" action="saveAction"/>
                            <button id="closeButton" action="closeAction"/>
                        </hbox>
                    </vbox>
                </vbox>
            </tab>
            <tab id="licensesTab" label="Licenses">
                <vbox width="100%" alignItems="CENTER" alignSelf="END" height="100%">
                    <dataGrid classNames="occtet-grid" dataContainer="licenseDc" id="licensesDataGrid" width="100%">
                        <columns resizable="true">
                            <column header="msg://eu.occtet.bocfrontend.entity/License.licenseName" property="licenseName"/>
                            <column header="msg://eu.occtet.bocfrontend.entity/LicenseType.licenseId" property="licenseType"/>
                            <column header="msg://eu.occtet.bocfrontend.entity/LicenseType.detailsUrl" property="detailsUrl"/>
                            <column header="msg://licensetype.isSpdx" property="isSpdx"/>
                        </columns>
                    </dataGrid>
                    <hbox>
                        <button id="addLicense" text="Add license" themeNames="primary"/>
                        <button id="removeLicenseButton" icon="TRASH" themeNames="error"/>
                    </hbox>
                </vbox>
            </tab>
        </tabSheet>
    </layout>
</view>
