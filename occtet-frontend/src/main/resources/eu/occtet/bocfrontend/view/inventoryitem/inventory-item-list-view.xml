<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://inventoryItemListView.title"
      focusComponent="inventoryItemsDataGrid">
    <data>
        <collection id="inventoryItemsDc"
                    class="eu.occtet.bocfrontend.entity.InventoryItem">
            <fetchPlan extends="_base">
                <property name="softwareComponent"/>
            </fetchPlan>
            <loader id="inventoryItemsDl" readOnly="true">
                <query>
                    <![CDATA[select e from InventoryItem e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox width="100%">
            <genericFilter id="genericFilter" dataLoader="inventoryItemsDl" themeNames="small"
                           width="80%" alignSelf="START">
                <properties include=".*"/>
                <conditions> </conditions>
            </genericFilter>
            <simplePagination id="pagination" dataLoader="inventoryItemsDl" alignSelf="END"/>
        </hbox>
        <dataGrid id="inventoryItemsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="inventoryItemsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
                <action id="refreshAction" type="list_refresh"/>
            </actions>
            <columns resizable="true">
                <column property="inventoryName" header="Inventory name"/>
                <column property="softwareComponent" header="Component"/>
                <column property="softwareComponent.licenses" header="Licenses" key="licenses"/>
                <column property="size" header="Size"/>
                <column property="linking" header="Linking"/>
                <column property="wasCombined" header="Combined"/>
                <column property="curated" header="Curated"/>
                <column property="project.projectName" header="Project"/>
            </columns>
        </dataGrid>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="inventoryItemsDataGrid.createAction"/>
            <button id="editButton" action="inventoryItemsDataGrid.editAction"/>
            <button id="removeButton" action="inventoryItemsDataGrid.removeAction"/>
        </hbox>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
