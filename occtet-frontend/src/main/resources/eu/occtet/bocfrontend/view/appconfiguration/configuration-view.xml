<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://configurationView.title">
    <data>
    </data>
    <layout>
        <tabSheet id="mainTabSheet" width="100%">

            <tab id="general" label="msg://configurationView.tab.general">
                <formLayout id="generalForm">
                    <textField id="basePathField" label="Base Path" width="100%"/>
                </formLayout>
            </tab>

            <tab id="editor" label="msg://configurationView.tab.editor">
                <vbox width="100%" height="100%" padding="true">
                    <tabSheet width="100%" height="">
                        <tab label="msg://eu.occtet.bocfrontend.view.appconfiguration/configurationView.tab.editor.suggestion" id="suggestion">
                            <fragment class="eu.occtet.bocfrontend.view.appconfiguration.suggestionfragment.Suggestionfragment"
                                      id="suggestionFragment"/>
                        </tab>
                        <tab label="msg://eu.occtet.bocfrontend.view.appconfiguration/configurationView.tab.editor.searchterms" id="searchTerms">
                            <fragment class="eu.occtet.bocfrontend.view.appconfiguration.editorprofilefragment.EditorProfileFragment"
                                          id="editorProfileFragment"/>
                        </tab>
                    </tabSheet>
                </vbox>
            </tab>

            <tab id="ort" label="msg://configurationView.tab.ort">
                <formLayout id="ortForm">
                </formLayout>
            </tab>

            <tab id="openSearch" label="msg://configurationView.tab.openSearch">
                <formLayout id="openSearchForm">
                </formLayout>
            </tab>
        </tabSheet>

        <hbox padding="true">
            <button id="saveBtn"
                    text="msg://eu.occtet.bocfrontend.view.appconfiguration/configurationView.save" icon="SAFE"
                    themeNames="primary small" enabled="false"
            />
        </hbox>
    </layout>
</view>