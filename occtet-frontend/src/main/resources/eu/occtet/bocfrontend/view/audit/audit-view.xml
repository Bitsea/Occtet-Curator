<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://auditView.title">
    <data>
        <collection id="inventoryItemDc"
                    class="eu.occtet.bocfrontend.entity.InventoryItem">
            <fetchPlan extends="_local">
                <property name="parent" fetchPlan="_base"/>
            </fetchPlan>
        </collection>
        <collection id="licenseDc"
                    class="eu.occtet.bocfrontend.entity.License">
            <fetchPlan extends="_base"/>
            <loader id="licenseDl">
                <query>
                    <![CDATA[select e from License e]]>
                </query>
            </loader>
        </collection>
        <collection id="copyrightDc"
                    class="eu.occtet.bocfrontend.entity.Copyright">
            <fetchPlan extends="_base"/>
            <loader id="copyrightDl">
                <query>
                    <![CDATA[select e from Copyright e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout  padding="false" spacing="false" width="100%" height="100%">
        <hbox width="100%" height="100%">
            <split width="100%" themeNames="small">
                <vbox classNames="border rounded-m border-contrast-20" width="30%">
                    <comboBox id="projectComboBox" label="Choose project"/>
                    <treeDataGrid id="inventoryItemDataGrid"
                                  dataContainer="inventoryItemDc"
                                  height="100%"
                                  width="100%"
                                  themeNames="no-border no-row-borders compact "
                                  hierarchyProperty="parent">
                        <columns>
                            <column property="inventoryName" header="Item"/>
                            <column key="viewActionColumn" header="" sortable="false" autoWidth="true" flexGrow="0"/>
                        </columns>
                    </treeDataGrid>
                </vbox>
                <tabSheet id="inventoryItemTabSheet" width="70%" height="100%"
                          classNames="border rounded-m border-contrast-20">
                </tabSheet>
            </split>
        </hbox>
    </layout>
</view>