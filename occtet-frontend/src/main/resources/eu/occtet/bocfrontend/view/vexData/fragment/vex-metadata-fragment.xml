<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <instance id="softwareComponentDc"
                  class="eu.occtet.bocfrontend.entity.SoftwareComponent">
            <fetchPlan extends="_base"/>
            <loader id="softwareComponentDl">
                <query>
                    <![CDATA[select s from SoftwareComponent s where s.softwareComponent = :softwareComponent]]>
                </query>
            </loader>
        </instance>
    </data>
    <content>
        <vbox>
            <hbox colspan="2" spacing="true" alignItems="END">
                <dateTimePicker id="timeStamp" label="TimeStamp"  datatype="localDateTime" readOnly="true" themeNames="small"/>
            </hbox>
            <comboBox id="type" placeholder="Select type"
                      label="Type"/>
            <textField id="name" property="name" label="ComponentName" dataContainer="softwareComponentDc" readOnly="true"/>
            <textField id="version" property="version" label="VersionName" dataContainer="softwareComponentDc" readOnly="true"/>
        </vbox>
    </content>
</fragment>