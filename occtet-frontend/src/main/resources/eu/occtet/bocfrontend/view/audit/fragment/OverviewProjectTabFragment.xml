<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <collection id="copyrightsDc"
                    class="eu.occtet.bocfrontend.entity.Copyright">
            <fetchPlan extends="_base">
                <property name="codeLocations"/>
            </fetchPlan>
            <loader id="copyrightsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Copyright e]]>
                </query>
            </loader>
        </collection>
        <collection id="licensesDc"
                    class="eu.occtet.bocfrontend.entity.License">
            <fetchPlan extends="_base"/>
            <loader id="licensesDl" readOnly="true">
                <query>
                    <![CDATA[select e from License e]]>
                </query>
            </loader>
        </collection>
        <collection id="vulnerabilitiesDc"
                    class="eu.occtet.bocfrontend.entity.Vulnerability">
            <fetchPlan extends="_base"/>
            <loader id="vulnerabilitiesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Vulnerability e]]>
                </query>
            </loader>
        </collection>
    </data>
    <content>
        <vbox>
            <accordion id="mainAccordion" height="100%" width="100%">
                <accordionPanel id="copyrightAccordion"  opened="false">
                    <dataGrid id="copyrightDataGrid"
                              dataContainer="copyrightsDc"
                              width="100%"
                              minHeight="15em">
                        <columns>
                            <column property="copyrightText"/>
                        </columns>
                    </dataGrid>
                </accordionPanel>
                <accordionPanel id="licensesAccordion" opened="false">
                    <dataGrid id="licensesDataGrid"
                              dataContainer="licensesDc"
                              width="100%"
                              minHeight="15em">
                        <columns>
                            <column property="licenseName"/>
                        </columns>
                    </dataGrid>
                </accordionPanel>
                <accordionPanel id="vulnerabilityAccordion" opened="false">
                    <dataGrid id="vulnerabilityDataGrid"
                              dataContainer="vulnerabilitiesDc"
                              width="100%"
                              minHeight="15em">
                        <columns>
                            <column property="vulnerabilityId"/>
                        </columns>
                    </dataGrid>
                </accordionPanel>
            </accordion>
        </vbox>
    </content>
</fragment>