<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <collection id="auditCopyrightDc"
                    class="eu.occtet.bocfrontend.dto.AuditCopyrightDTO">
            <fetchPlan extends="_base"/>
        </collection>
        <collection id="auditLicensesDc"
                    class="eu.occtet.bocfrontend.dto.AuditLicenseDTO">
            <fetchPlan extends="_base"/>
        </collection>
        <collection id="auditVulnerabilitiesDc"
                    class="eu.occtet.bocfrontend.dto.AuditVulnerabilityDTO">
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <content>
        <vbox>
            <accordion id="mainAccordion" height="100%" width="100%">
                <accordionPanel id="copyrightAccordion"  opened="false">
                    <dataGrid id="auditCopyrightDataGrid"
                              dataContainer="auditCopyrightDc"
                              width="100%">
                        <columns>
                            <column property="copyrightName" header="Copyright"/>
                            <column property="numFiles" header="Number in files"/>
                        </columns>
                    </dataGrid>
                </accordionPanel>
                <accordionPanel id="licensesAccordion" opened="false">
                    <dataGrid id="auditLicensesDataGrid"
                              dataContainer="auditLicensesDc"
                              width="100%">
                        <columns>
                            <column property="licenseName" header="License"/>
                            <column property="numSc" header="Number in software components"/>
                        </columns>
                    </dataGrid>
                </accordionPanel>
                <accordionPanel id="vulnerabilityAccordion" opened="false">
                    <dataGrid id="vulnerabilityDataGrid"
                              dataContainer="auditVulnerabilitiesDc"
                              width="100%">
                        <columns>
                            <column property="vulnerabilityName" header="Vulnerability"/>
                            <column property="riskScore" header="Risk score of vulnerability"/>
                            <column property="numSc" header="Number in software components"/>
                        </columns>
                    </dataGrid>
                </accordionPanel>
            </accordion>
        </vbox>
    </content>
</fragment>