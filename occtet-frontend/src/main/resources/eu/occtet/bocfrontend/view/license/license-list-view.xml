<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://licenseListView.title"
      focusComponent="licensesDataGrid">
    <data>
        <collection id="licensesDc"
                    class="eu.occtet.bocfrontend.entity.License">
            <fetchPlan extends="_base"/>
            <loader id="licensesDl" readOnly="true">
                <query>
                    <![CDATA[select e from License e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <vbox>
            <button id="textSearchLicense" text="msg://licenseListView.searchText"/>
            <hbox width="100%">
                <genericFilter id="genericFilter" dataLoader="licensesDl" themeNames="small"
                               width="80%" alignSelf="START">
                    <properties include=".*"/>
                    <conditions> </conditions>
                </genericFilter>
                <simplePagination id="pagination" dataLoader="licensesDl" alignSelf="END"/>
            </hbox>
            <dataGrid classNames="occtet-grid" id="licensesDataGrid"
                      width="100%"
                      height="30em"
                      dataContainer="licensesDc"
                      columnReorderingAllowed="true">
                <actions>
                    <action id="editAction" type="list_edit"/>
                    <action id="refreshAction" type="list_refresh"/>
                    <action id="createAction" type="list_create"/>
                    <action id="removeAction" type="list_remove"/>
                </actions>
                <columns resizable="true">
                    <column property="licenseType" header="msg://eu.occtet.bocfrontend.entity/License"/>
                    <column property="priority" header="msg://eu.occtet.bocfrontend.entity/LicenseType.priority"/>
                    <column property="licenseText" header="msg://eu.occtet.bocfrontend.entity/LicenseType.licenseText"/>
                    <column property="licenseName" header="msg://eu.occtet.bocfrontend.entity/License.licenseName"/>
                    <column property="detailsUrl" header="msg://eu.occtet.bocfrontend.entity/License.detailsUrl"/>
                    <column property="isModified" header="msg://eu.occtet.bocfrontend.entity/License.isModified"/>
                    <column property="curated" header="msg://eu.occtet.bocfrontend.entity/License.curated"/>
                    <column property="isSpdx" header="msg://eu.occtet.bocfrontend.entity/License.isSpdx"/>
                </columns>
            </dataGrid>
            <hbox width="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel" alignSelf="START">
                    <button id="createButton" action="licensesDataGrid.createAction"/>
                    <button id="editButton" action="licensesDataGrid.editAction"/>
                    <button id="removeButton" action="licensesDataGrid.removeAction"/>
                </hbox>
                <hbox alignSelf="END">
                    <button id="fetchSPDXButton" text="Fetch spdx licenses" themeNames="primary" alignSelf="END"/>
                </hbox>
            </hbox>
            <hbox id="lookupActions" visible="false">
                <button id="selectButton" action="selectAction"/>
                <button id="discardButton" action="discardAction"/>
            </hbox>
        </vbox>
    </layout>
</view>
