<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://licenseListView.title"
      focusComponent="licensesDataGrid">
    <data>
        <collection id="licensesDc"
                    class="eu.occtet.bocfrontend.entity.License">
            <fetchPlan extends="_base"/>
            <loader id="licensesDl" readOnly="true">
                <query>
                    <![CDATA[select e from License e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <vbox>
            <accordion id="projectAccordion" width="100%" >
                <accordionPanel summaryText="Find licenses from software component">
                    <hbox>
                        <comboBox id="projectComboBox" label="Project" width="20em" />
                        <comboBox id="softwareComponentComboBox" label="Software component" width="20em"/>
                    </hbox>
                </accordionPanel>
            </accordion>
            <accordion id="attributesAccordion" width="100%">
                <accordionPanel summaryText="Filter licenses by attributes">
                    <hbox>
                        <comboBox id="priorityComboBox" label="Priority"/>
                        <comboBox id="curatedComboBox" label="Curated"/>
                    </hbox>
                </accordionPanel>
            </accordion>
            <hbox classNames="buttons-panel" width="100%">
                <hbox alignSelf="END">
                    <textField id="searchField" width="15em" placeholder="search term"/>
                    <button id="searchButton" text="Search"/>
                </hbox>
                <button id="refreshButton" action="licensesDataGrid.refreshAction" alignSelf="CENTER"/>
                <simplePagination id="pagination" dataLoader="licensesDl" alignSelf="END"/>
            </hbox>
            <dataGrid id="licensesDataGrid"
                      width="100%"
                      height="35em"
                      dataContainer="licensesDc"
                      columnReorderingAllowed="true">
                <actions>
                    <action id="editAction" type="list_edit"/>
                    <action id="refreshAction" type="list_refresh"/>
                    <action id="createAction" type="list_create"/>
                    <action id="removeAction" type="list_remove"/>
                </actions>
                <columns resizable="true">
                    <column property="licenseType" header="Type"/>
                    <column property="priority" header="Priority"/>
                    <column property="licenseText" header="License text"/>
                    <column property="licenseName" header="Licence name"/>
                    <column property="detailsUrl" header="Details url"/>
                    <column property="isModified" header="Modified"/>
                    <column property="curated" header="Curated"/>
                    <column property="isSpdx" header="SPDX"/>
                </columns>
            </dataGrid>
            <hbox width="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel" alignSelf="START">
                    <button id="createButton" action="licensesDataGrid.createAction"/>
                    <button id="editButton" action="licensesDataGrid.editAction"/>
                    <button id="removeButton" action="licensesDataGrid.removeAction"/>
                </hbox>
                <hbox alignSelf="END">
                    <button id="fetchSPDXButton" text="Fetch spdx licenses" themeNames="primary" alignSelf="END"/>
                </hbox>
            </hbox>
            <hbox id="lookupActions" visible="false">
                <button id="selectButton" action="selectAction"/>
                <button id="discardButton" action="discardAction"/>
            </hbox>
        </vbox>
    </layout>
</view>
