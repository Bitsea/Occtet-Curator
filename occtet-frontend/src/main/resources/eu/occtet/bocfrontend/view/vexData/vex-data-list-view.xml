<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://title"
    focusComponent="vexDataDataGrid">
    <data>
        <collection id="vexDataDc"
                    class="eu.occtet.bocfrontend.entity.VexData">
            <fetchPlan extends="_base">
            </fetchPlan>
            <loader id="vexDataDl" readOnly="true">
                <query>
                    <![CDATA[select e from VexData e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <vbox width="100%" height="100%">
            <comboBox id="projectComboBox" property="projectName" label="Choose project"/>
            <hbox width="100%" visible="false" id="filterBox">
                <genericFilter id="genericFilter" dataLoader="vexDataDl" themeNames="small" alignSelf="START" opened="false">
                    <properties include=".*"/>
                </genericFilter>
                <simplePagination id="pagination" dataLoader="vexDataDl" alignSelf="END"/>
            </hbox>
            <dataGrid classNames="occtet-grid" id="vexDataDataGrid"
                      width="100%"
                      minHeight="20em"
                      maxHeight="100%"
                      dataContainer="vexDataDc"
                      columnReorderingAllowed="true">
                <actions>
                    <action id="createAction" type="list_create"/>
                    <action id="read" type="list_read"/>
                    <action id="removeAction" type="list_remove"/>
                    <action id="refreshAction" type="list_refresh"/>
                </actions>
                <columns resizable="true">
                    <column property="bomFormat" header="msg://eu.occtet.bocfrontend.entity/VexData.bomFormat"/>
                    <column property="version" header="msg://version"/>
                    <column property="specVersion" header="msg://eu.occtet.bocfrontend.entity/SoftwareComponent.purl"/>
                    <column property="serialNumber" header="msg://eu.occtet.bocfrontend.entity/Copyright.curated"/>
                    <column property="softwareComponent.name"
                            header="msg://eu.occtet.bocfrontend.entity/SoftwareComponent.name"/>
                </columns>
            </dataGrid>
            <hbox id="lookupActions" visible="false">
                <button id="selectButton" action="selectAction"/>
                <button id="discardButton" action="discardAction"/>
            </hbox>
            <hbox id="buttonsPanel" classNames="buttons-panel">
                <button id="readButton" action="vexDataDataGrid.read"/>
                <button id="removeButton" action="vexDataDataGrid.removeAction"/>
            </hbox>
        </vbox>
    </layout>
</view>