<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="Work data input">
    <layout>
        <vbox width="100%" height="100%">
            <vbox width="100%" height="100%">
                <hbox width="100%">
                    <comboBox id="projectComboBox" label="Project" width="50%"/>
                    <comboBox id="inventoryItemComboBox" label="Inventory item" width="50%"/>
                </hbox>
                <vbox width="100%">
                    <checkbox id= "useCopyrigthAIBox" label="Copyrigth Ai"/>
                    <checkbox id="licenseMatcherBox" label="License matcher"/>
                </vbox>
                <vbox width="100%">
                    <fileStorageUploadField id="jsonSpdxUpload" uploadText="Upload SPDX-file"
                                            fileStoragePutMode="MANUAL" width="30%"/>
                </vbox>
            </vbox>
            <hbox alignSelf="CENTER" width="100%" justifyContent="CENTER">
                <button id="sendWorkdataButton" text="Send data"/>
                <button id="cancelButton" text="cancel"/>
            </hbox>
        </vbox>
    </layout>
</view>