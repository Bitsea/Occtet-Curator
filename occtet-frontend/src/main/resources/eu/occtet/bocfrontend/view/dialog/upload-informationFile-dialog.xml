<view xmlns="http://jmix.io/schema/flowui/view"
      title="Read information file">
    <actions>
        <action id="cancel" type="view_close"/>
    </actions>
    <layout width="100%" height="100%">
        <vbox width="100%" height="100%">
            <textField id="contextTextField" width="70%" label="Context"/>
            <fileUploadField id="fileUploadField" uploadText="Upload file"
                                    fileNameVisible="True"/>
            <hbox width="100%" height="100%" justifyContent="CENTER" alignItems="END">
                <button id="startBtn" text="Read file" themeNames="primary"/>
                <button id="cancelBtn" text="Cancel" action="cancel" themeNames="primary"/>
            </hbox>
        </vbox>
    </layout>
</view>