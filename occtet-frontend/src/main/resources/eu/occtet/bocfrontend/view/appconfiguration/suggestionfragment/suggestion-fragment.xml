<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <collection id="suggestionsDc"
                    class="eu.occtet.bocfrontend.entity.Suggestion">
            <loader id="suggestionsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Suggestion e]]>
                </query>
            </loader>
        </collection>
    </data>
    <content>
        <vbox width="100%" height="100%">
            <hbox width="100%">
                <genericFilter id="genericFilter"
                               dataLoader="suggestionsDl"
                               themeNames="small"
                               width="100%">
                    <properties include=".*"/>
                </genericFilter>
                <simplePagination id="pagination" dataLoader="suggestionsDl"/>
            </hbox>

            <dataGrid classNames="occtet-grid" id="suggestionsDataGrid"
                      width="100%"
                      minHeight="20em"
                      dataContainer="suggestionsDc">
                <actions>
                    <action id="create" type="list_create">
                        <properties>
                            <property name="viewId" value="Suggestion.detail"/>
                            <property name="openMode" value="DIALOG"/>
                        </properties>
                    </action>
                    <action id="edit" type="list_edit">
                        <properties>
                            <property name="viewId" value="Suggestion.detail"/>
                            <property name="openMode" value="DIALOG"/>
                        </properties>
                    </action>
                    <action id="remove" type="list_remove"/>
                </actions>
                <columns resizable="true">
                    <column property="context" filterable="true" autoWidth="true" header="msg://eu.occtet.bocfrontend.view.suggestion/context"/>
                    <column property="sentence" autoWidth="true" filterable="true" header="msg://eu.occtet.bocfrontend.view.suggestion/Sentence"/>
                </columns>
            </dataGrid>

            <hbox id="buttonsPanel" classNames="buttons-panel">
                <button id="createButton" action="suggestionsDataGrid.create"/>
                <button id="editButton" action="suggestionsDataGrid.edit"/>
                <button id="removeButton" action="suggestionsDataGrid.remove"/>
            </hbox>
        </vbox>
    </content>
</fragment>