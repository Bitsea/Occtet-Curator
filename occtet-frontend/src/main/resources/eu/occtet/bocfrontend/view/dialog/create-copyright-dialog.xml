<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="Create copyright and add to inventoryItem">
    <layout width="100%" height="100%">
        <vbox width="100%" height="100%">
            <textField id="copyrightNameField" label="Copyright name" width="100%"/>
            <comboBox id="copyrightFilePathComboBox" label="File path" width="100%"/>
            <vbox>
                <checkbox id="isGarbageField" label="SPDX"/>
                <checkbox id="isCuratedField" label="Curated"/>
            </vbox>
        </vbox>
        <hbox width="100%" alignSelf="BASELINE" justifyContent="CENTER" alignItems="CENTER">
            <button id="addCopyrightButton" text="Add copyright" themeNames="primary"/>
            <button id="cancelButton" text="Cancel" themeNames="primary"/>
        </hbox>
    </layout>
</view>
