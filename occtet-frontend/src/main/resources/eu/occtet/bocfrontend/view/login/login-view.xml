<view xmlns="http://jmix.io/schema/flowui/view"
      focusComponent="login"
      title="msg://LoginView.title">
    <layout justifyContent="CENTER" alignItems="CENTER" classNames="jmix-login-main-layout"
            padding="false"
            margin="false"
            spacing="false">

        <!-- HEADER with logo -->
        <div classNames="login-header">
            <image classNames="image-back"
                   resource="themes/BocFrontend/images/hero-section-bg.webp"/>
            <image classNames="image-front"
                   resource="themes/BocFrontend/images/hero-bg-curve.webp"/>

        </div>


        <div>
            <hbox>
            <h2 id="applicationTitle"
                classNames="jmix-main-view-application-title" text="msg://Occtet">
                <image id="logoImage"
                       resource="themes/BocFrontend/images/Occtet-Color.png"
                       width="auto"
                       height="80%"/>
                <h2 text="msg://Occtet"/>
            </h2>
            </hbox>
        </div>

        <!-- middle-->
        <div classNames="login-center">
            <loginForm id="login"
                       forgotPasswordButtonVisible="false">
                <form title="msg://loginForm.headerTitle"
                      username="msg://loginForm.username"
                      password="msg://loginForm.password"
                      rememberMe="msg://loginForm.rememberMe"
                      submit="msg://loginForm.submit"
                      forgotPassword="msg://loginForm.forgotPassword"/>
                <errorMessage title="msg://loginForm.errorTitle"
                              message="msg://loginForm.badCredentials"
                              username="msg://loginForm.errorUsername"
                              password="msg://loginForm.errorPassword"/>
            </loginForm>
        </div>


        <!-- FOOTER-->
        <div classNames="login-footer">
            <vbox>
               <span text="msg://Funding.title"/>
               <span text="msg://Funding"/>
               <hbox>
                 <image id="footerImage1"
                        resource="themes/BocFrontend/images/eccc.svg"
                        width="15%"
                        height="20%"/>
                <image id="footerImage2"
                       resource="themes/BocFrontend/images/eu.png"
                       width="15%"
                       height="20%"/>
               </hbox>
            </vbox>
        </div>
    </layout>
</view>