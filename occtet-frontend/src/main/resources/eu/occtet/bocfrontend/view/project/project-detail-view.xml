<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://projectDetailView.title"
      focusComponent="form">
    <data>
        <instance id="projectDc"
                  class="eu.occtet.bocfrontend.entity.Project">
            <fetchPlan extends="_base"/>
            <loader id="projectDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="projectDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <vbox width="100%" margin="false">
            <textField id="projectNameField" property="projectName" required="true" width="100%"/>
            <textField id="projectBasePathField" property="basePath" required="true" width="100%"/>
            </vbox>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
