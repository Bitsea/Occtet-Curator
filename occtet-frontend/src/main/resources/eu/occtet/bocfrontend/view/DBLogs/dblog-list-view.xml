<view xmlns="http://jmix.io/schema/flowui/view"
      title="Backend Logs"
      focusComponent="dataGrid">
    <data>
        <collection id="dbLogDc"
                    class="eu.occtet.bocfrontend.entity.LoggingEvent">
            <fetchPlan extends="_base"/>

            <loader id="dbLogLoader" readOnly="true">

                <query>
                    <![CDATA[select e from LoggingEvent e order by e.timestmp desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <settings id="settingsFacet" auto="true"/>
        <timer id="timer" delay="15000" autostart="true" repeating="true"/>
    </facets>

    <layout>

        <simplePagination dataLoader="dbLogLoader"/>
        <dataGrid classNames="occtet-grid" id="dataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="dbLogDc">

            <columns resizable="true" sortable="false">
                <column property="timestmp" width="15%" header="msg://eu.occtet.bocfrontend.entity/DbLog.eventDate"
                        sortable="false"/>
                <column property="loggerName" width="25%" header="msg://eu.occtet.bocfrontend.entity/DbLog.loggerName"
                        sortable="false"/>
                <column property="formattedMessage" autoWidth="true"
                        header="msg://eu.occtet.bocfrontend.entity/DbLog.message" sortable="false"/>
            </columns>
        </dataGrid>
    </layout>
</view>