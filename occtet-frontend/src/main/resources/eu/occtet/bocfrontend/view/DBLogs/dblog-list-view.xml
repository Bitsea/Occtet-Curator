<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="Backend Logs"
      focusComponent="DBLogListDataGrid">
    <data>
        <collection id="dbLogDc"
                    class="eu.occtet.bocfrontend.entity.DBLog">
            <fetchPlan extends="_base"/>
            <loader id="dbLogDc" readOnly="true">
                <query>
                    <![CDATA[select e from DBLog e order by e.eventDate]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <settings id="settingsFacet" auto="true"/>
        <timer id="timer" delay="15000" autostart="true" repeating="true"/>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>

        <hbox spacing="false"
              width="100%"
              alignItems="CENTER">

            <vbox spacing="false"
                  margin="false">
                <button id="testConnection" text="testAiConnection" />
                <button id="callApiButtonCopyright"
                        text="Call Backend for Copyrights"/>
                <button id="callApiButtonLicense"
                        text="Call Backend for Licenses"/>

                <genericFilter id="genericFilter"
                               dataLoader="dbLogDc">
                    <properties include=".*"/>
                </genericFilter>
            </vbox>

        </hbox>

        <dataGrid id="DBLogListDataGrid"
                  width="100%"
                  columnReorderingAllowed="true"
                  minHeight="20em"
                  dataContainer="dbLogDc">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="refresh" type="list_refresh"/>
                <action id="remove" type="list_remove"/>

            </actions>
            <columns resizable="true">
                <column property="eventDate" header="msg://eu.occtet.bocfrontend.entity/DbLog.eventDate"/>
                <column property="component" header="msg://eu.occtet.bocfrontend.entity/DbLog.component"/>
                <column property="message" header="msg://eu.occtet.bocfrontend.entity/DbLog.message"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>