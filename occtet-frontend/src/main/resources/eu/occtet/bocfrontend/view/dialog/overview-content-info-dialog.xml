<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="inventoryItemsDc"
                    class="eu.occtet.bocfrontend.entity.InventoryItem">
            <fetchPlan extends="_base">
                <property name="softwareComponent"/>
            </fetchPlan>
            <loader id="inventoryItemsDl" readOnly="true">
                <query>
                    <![CDATA[select e from InventoryItem e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout width="100%" height="100%">
        <h3 id="title"/>
        <vbox width="100%">
            <dataGrid id="inventoryItemsDataGrid"
                      width="100%"
                      minHeight="20em"
                      dataContainer="inventoryItemsDc"
                      columnReorderingAllowed="true">
                <columns resizable="true">
                    <column property="inventoryName" header="Inventory item"/>
                    <column property="softwareComponent.name" header="Software component"/>
                    <column key="showInventoryBtn" autoWidth="true" sortable="false"/>
                </columns>
            </dataGrid>
        </vbox>
        <hbox width="100%" alignItems="CENTER" justifyContent="CENTER" alignSelf="CENTER">
            <button id="cancelButton" text="Ok" themeNames="primary"/>
        </hbox>
    </layout>
</view>