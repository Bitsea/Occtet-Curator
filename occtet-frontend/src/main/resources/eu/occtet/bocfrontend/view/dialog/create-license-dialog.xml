<view xmlns="http://jmix.io/schema/flowui/view"
      title="Create license and add to software component">
    <layout width="100%" height="100%">
        <vbox width="100%">
            <hbox width="100%">
                <textField id="licenseNameField" label="License name" width="100%"/>
                <textField id="licenseTypeField" label="License Type" width="100%"/>
            </hbox>
            <textField id="detailsUrlField"  label="Detail url" width="100%"/>
            <textField id="priorityField" label="Priority"/>
            <hbox>
                <checkbox id="isSpdxField" label="SPDX"/>
                <checkbox id="isCuratedField"  label="Curated"/>
                <checkbox id="isModifiedField" label="Modified"/>
            </hbox>
            <textArea id="licenseTextField" label="License text" minWidth="100%" maxRows="20"/>
        </vbox>
        <hbox width="100%" alignItems="CENTER" justifyContent="CENTER" alignSelf="BASELINE">
            <button id="addLicenseButton" text="Add license" themeNames="primary"/>
            <button id="cancelButton" text="Cancel" themeNames="primary"/>
        </hbox>
    </layout>
</view>
