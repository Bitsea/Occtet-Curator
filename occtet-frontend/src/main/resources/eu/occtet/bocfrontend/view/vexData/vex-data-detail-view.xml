<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://vexDataDetailView.title">
    <data>
        <instance id="vexDataDc"
                  class="eu.occtet.bocfrontend.entity.VexData">
            <fetchPlan extends="_base">
                <property name="softwareComponent" fetchPlan="_base"/>
                <property name="vulnerability" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="vexDataDl"/>

        </instance>
        <collection id="vulnerabilitiesDc" class="eu.occtet.bocfrontend.entity.Vulnerability">
            <loader id="vulnerabilitiesDl">
                <query>
                    <![CDATA[select v from Vulnerability v where v.vexData = :vexData]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="saveAction"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout padding="true">
        <formLayout id="form" dataContainer="vexDataDc" height="90%" width="100%">
<!--            <textField id="title" property="title" label="Title"/>-->
            <textField id="bomFormat" property="bomFormat" label="BomFormat"/>
            <textField id="specVersion" property="specVersion" label="SpecVersion" width="30%"/>
            <textField id="serialNumber" property="serialNumber" label="SerialNumber" />
            <integerField id="version" property="version" label="version" width="30%"/>
            <htmlObject colspan="2">
                <hr/>
            </htmlObject>
            <details id="metaDataDetailsBox" classNames="bordered-panel" summaryText="Finding Details" opened="true"
                     alignSelf="STRETCH"/>
            <htmlObject colspan="2">
                <hr/>
            </htmlObject>
            <virtualList id="virtualList"
                         itemsContainer="vulnerabilitiesDc">
                <fragmentRenderer
                        class="eu.occtet.bocfrontend.view.vexData.fragment.VexVulnerabilityFragment"/>
            </virtualList>
        </formLayout>
        <hbox>
            <button id="saveButton" text="save" themeNames="primary small" action="saveAction"/>
        </hbox>
    </layout>
</view>