<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://vexDataDetailView.title">
<data>
    <instance id="vulnerabilityDc"
              class="eu.occtet.bocfrontend.entity.VexData">
        <fetchPlan extends="_base"/>
        <loader/>
    </instance>
</data>
<facets>
    <dataLoadCoordinator auto="true"/>
</facets>
<actions>
    <action id="saveAction" type="detail_saveClose"/>
    <action id="closeAction" type="detail_close"/>
</actions>
<layout height="100%" width="100%">
    <tabSheet id="mainTabSheet" width="100%" height="100%" themeNames="no-padding">
        <tab id="detailTab" label="General VEX information">
            <vbox width="100%" height="100%">
                <formLayout id="form" dataContainer="vulnerabilityDc" labelsPosition="ASIDE">
                    <textField id="vulnerabilityIdField" property="vulnerabilityId" label="Vulnerability ID"/>
                    <hbox>
                        <numberField id="weightedSeverityField" property="weightedSeverity" label="Weighted severity"/>
                        <numberField id="exploitabilityField" property="exploitability" label="exploitability"/>
                        <numberField id="riskScoreField" property="riskScore" label="Risk score"/>
                    </hbox>
                    <textField id="sourceUrlField" property="sourceUrl" label="Source URL"/>
                    <textArea id="aliasesField" label="Aliases"/>

                    <textArea id="summaryField" property="summary" label="Summary" maxHeight="30em" width="50%"
                              colspan="2" alignSelf="CENTER"/>
                    <textArea id="fixedPackagesField" label="Fixed Packages" maxHeight="30em" colspan="2"/>
                    <textArea id="referencesField" label="Reference URLs" maxHeight="30em" colspan="2"/>
                </formLayout>
                <hbox id="detailActions" spacing="true" alignSelf="CENTER" width="100%">
                    <hbox alignSelf="START" width="40%">
                        <span id="created" />
                    </hbox>
                    <hbox alignSelf="START" width="60%">
                        <button id="commitAndCloseBtn" action="saveAction"/>
                        <button id="closeBtn" action="closeAction"/>
                    </hbox>
                </hbox>
            </vbox>
        </tab>
        <tab id="findingTab" label="Findings" >
            <vbox width="100%" height="100%">
                <hbox>
                    <comboBox id="projectComboBox" label="Project"/>
                    <comboBox id="softwareComboBox" label="SoftwareComponent"/>
                </hbox>
                <dataGrid id="inventoryItemsDataGrid"
                          width="100%"
                          height="40em"
                          maxHeight="100%"
                          dataContainer="inventoryItemsDc"
                          columnReorderingAllowed="true">
                    <columns resizable="true">
                        <column property="project.projectName" header="Project"/>
                        <column property="inventoryName" header="Inventory item"/>
                        <column property="softwareComponent.name" header="Software component"/>
                        <column property="softwareComponent.version" header="Version"/>
                    </columns>
                </dataGrid>
            </vbox>
        </tab>
    </tabSheet>
</layout>
</view>