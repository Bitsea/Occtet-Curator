<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://eu.occtet.bocfrontend.view.vexData/caption">
    <data>
        <instance id="vexDataDc"
                  class="eu.occtet.bocfrontend.entity.VexData">
            <fetchPlan extends="_base">
                <property name="softwareComponent" fetchPlan="_base"/>
                <property name="vulnerability" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="vexDataDl"/>

        </instance>
        <collection id="vulnerabilitiesDc" class="eu.occtet.bocfrontend.entity.Vulnerability">
            <loader id="vulnerabilitiesDl">
                <query>
                    <![CDATA[select v from Vulnerability v where v.vexData = :vexData]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout padding="true">
        <hbox width="100%" spacing="true">
                <button id="saveButton" text="msg://saveAndDownload" themeNames="primary small" action="saveAction"/>
                <button id="closeButton" text="close" themeNames="small" action="closeAction"/>
        </hbox>
        <hbox>
            <nativeLabel text="Timestamp: " themeNames="align-right"/>
            <nativeLabel id="timeStamp" property="timeStamp" dataContainer="vexDataDc" colspan="2" themeNames="align-right"/>
        </hbox>

        <vbox>
            <textField width="50%" id="title" property="title" dataContainer="vexDataDc"
                       label="msg://eu.occtet.bocfrontend.entity/VexData.title"/>

            <hbox width="100%">
            <textField width="50%" id="bomFormat" required="true" property="bomFormat" dataContainer="vexDataDc" label="msg://BomFormat"/>
            <textField width="50%" id="specVersion" required="true" property="specVersion" dataContainer="vexDataDc" label="msg://SpecVersion" />
                <textField width="50%" id="serialNumber" required="true" property="serialNumber"
                           dataContainer="vexDataDc" label="msg://SerialNumber"/>
                <integerField width="50%" id="version" required="true" property="version" dataContainer="vexDataDc"
                              label="msg://eu.occtet.bocfrontend.view.vexData/version"/>
                <htmlObject colspan="2">
                    <hr/>
                </htmlObject>
            </hbox>
            <details id="metaDataDetailsBox" summaryText="msg://metaData" classNames="bordered-panel" opened="true"
                     width="100%">
            </details>
            <htmlObject colspan="2">
                <hr/>
            </htmlObject>
            <details width="100%" summaryText="msg://vulnerabilities" classNames="bordered-panel" opened="true">
                <virtualList id="vulnerabilityBox" itemsContainer="vulnerabilitiesDc" width="100%"/>
            </details>
    </vbox>

    </layout>
</view>