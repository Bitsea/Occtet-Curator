<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://copyrightListView.title"
      focusComponent="copyrightsDataGrid">
    <data>
        <collection id="copyrightsDc"
                    class="eu.occtet.bocfrontend.entity.Copyright">
            <fetchPlan extends="_base">
                <property name="codeLocations" fetchPlan="_base">
                    <property name="inventoryItem" fetchPlan="_base">
                        <property name="softwareComponent" fetchPlan="_base"/>

                    </property>
                </property>
            </fetchPlan>
            <fetchPlan extends="_base">
                <property name="codeLocations" fetch="AUTO"/>
            </fetchPlan>

            <loader id="copyrightsDl">
                <query>
                    <![CDATA[
                        select distinct c
                        from Copyright c
                        left join c.codeLocations cl
                        left join cl.inventoryItem ii
                        left join ii.softwareComponent sc
                    ]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <vbox width="100%" height="100%">
            <hbox width="100%">
                <comboBox id="projectComboBox" property="projectName"/>
                <button id="saveButton" text="Save" enabled="false" alignSelf="START" themeNames="warning" icon="vaadin:safe" visible="false"/>
                <checkbox id="immediateCheckbox" label="msg://saveImmediately" value="true" alignSelf="START" visible="false"/>
            </hbox>
            <hbox width="100%" visible="false" id="filterBox">
                <genericFilter id="genericFilter" dataLoader="copyrightsDl" themeNames="small" alignSelf="START" opened="false">
                    <properties include=".*"/>
                    <conditions> </conditions>
                </genericFilter>
                <simplePagination id="pagination" dataLoader="copyrightsDl" alignSelf="END" />
            </hbox>
            <dataGrid classNames="occtet-grid" id="copyrightsDataGrid"
                      width="100%"
                      minHeight="30em"
                      dataContainer="copyrightsDc"
                      columnReorderingAllowed="true"
                      editorBuffered="true">
                <columns resizable="true">
                    <column property="copyrightText" header="Name"/>
                    <column property="curated" header="msg://eu.occtet.bocfrontend.entity/Copyright.curated" editable="true"/>
                    <column property="garbage" header="msg://eu.occtet.bocfrontend.entity/Copyright.garbage" editable="true"/>
                    <column property="aiControlled" header="msg://aiControlled" editable="true"/>
                    <column property="codeLocations.filePath" header="msg://FilePath" key="filePath"/>
                    <column property="codeLocations.inventoryItem.softwareComponent.name" header="msg://SoftwareComponent" key="softwareComponent"/>
                    <editorActionsColumn key="nonBufferedEditorColumn">
                        <editButton icon="PENCIL" text="msg:///actions.Edit"/>
                        <saveButton icon="CHECK"/>
                    </editorActionsColumn>
                </columns>
                <actions>
                    <action id="editAction" type="list_edit"/>
                    <action id="refreshAction" type="list_refresh"/>
                    <action id="createAction" type="list_create"/>
                    <action id="removeAction" type="list_remove"/>
                </actions>
            </dataGrid>
            <hbox width="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createButton" action="copyrightsDataGrid.createAction"/>
                    <button id="editButton" action="copyrightsDataGrid.editAction"/>
                    <button id="removeButton" action="copyrightsDataGrid.removeAction"/>
                </hbox>
                <hbox alignItems="END">
                    <button id="downloadButton" text="Download garbage copyrights"/>
                    <fileUploadField id="uploadFile" uploadText="Upload copyright files"/>
                </hbox>
            </hbox>
            <hbox id="lookupActions" visible="false">
                <button id="selectButton" action="selectAction"/>
                <button id="discardButton" action="discardAction"/>
            </hbox>
        </vbox>
    </layout>
</view>
