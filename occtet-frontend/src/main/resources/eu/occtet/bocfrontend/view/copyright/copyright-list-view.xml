<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://copyrightListView.title"
      focusComponent="copyrightsDataGrid">
    <data>
        <collection id="copyrightsDc"
                    class="eu.occtet.bocfrontend.entity.Copyright">
            <fetchPlan extends="_base">
                <property name="codeLocation"/>
            </fetchPlan>
            <loader id="copyrightsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Copyright e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <vbox>
            <accordion id="projectAccordion" width="100%" >
                <accordionPanel summaryText="Find copyrights from software component">
                    <hbox>
                        <comboBox id="projectComboBox" label="Project" width="20em"/>
                        <comboBox id="softwareComponentComboBox" label="Software component" width="20em"/>
                    </hbox>
                </accordionPanel>
            </accordion>
            <accordion id="attributesAccordion" width="100%">
                <accordionPanel summaryText="Filter copyrights by attributes">
                    <hbox>
                        <comboBox id="curatedComboBox" label="Curated"/>
                        <comboBox id="garbageComboBox" label="Garbage"/>
                    </hbox>
                </accordionPanel>
            </accordion>
            <hbox classNames="buttons-panel" width="100%">
                <hbox alignSelf="END">
                    <textField id="searchField" width="15em" placeholder="search term"/>
                    <button id="searchButton" text="Search"/>
                </hbox>
                <button id="refreshButton" action="copyrightsDataGrid.refreshAction" alignSelf="CENTER"/>
                <simplePagination id="pagination" dataLoader="copyrightsDl" alignSelf="END"/>
            </hbox>
            <dataGrid id="copyrightsDataGrid"
                      width="100%"
                      minHeight="20em"
                      dataContainer="copyrightsDc"
                      columnReorderingAllowed="true">
                <columns resizable="true">
                    <column property="copyrightText" header="Name"/>
                    <column property="curated" header="Curated"/>
                    <column property="garbage" header="Garbage"/>
                    <column property="codeLocation.filePath" header="Code location"/>
                </columns>
                <actions>
                    <action id="editAction" type="list_edit"/>
                    <action id="refreshAction" type="list_refresh"/>
                    <action id="createAction" type="list_create"/>
                    <action id="removeAction" type="list_remove"/>
                </actions>
            </dataGrid>
            <hbox width="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createButton" action="copyrightsDataGrid.createAction"/>
                    <button id="editButton" action="copyrightsDataGrid.editAction"/>
                    <button id="removeButton" action="copyrightsDataGrid.removeAction"/>
                </hbox>
                <hbox alignItems="END">
                    <button id="downloadButton" text="Download garbage copyrights"/>
                    <fileUploadField id="uploadFile" uploadText="Upload copyright files"/>
                </hbox>
            </hbox>
            <hbox id="lookupActions" visible="false">
                <button id="selectButton" action="selectAction"/>
                <button id="discardButton" action="discardAction"/>
            </hbox>
        </vbox>
    </layout>
</view>
