<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="Copyrights Quick-Check"
      focusComponent="copyrightsDataGrid">
    <data>
        <collection id="copyrightsDc"
                    class="eu.occtet.bocfrontend.entity.Copyright">
            <fetchPlan extends="_base"/>
            <loader id="copyrightsDl">
                <query>
                    <![CDATA[select distinct c from Copyright c
                    join c.codeLocations cl
                    join cl.inventoryItem i
                    join i.project p
                    where p = :project and c.aiControlled = True]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <vbox width="100%" height="100%">
            <comboBox id="projectComboBox" property="projectName" label="msg://chooseProject"/>
            <hbox width="100%" visible="false" id="filterBox">
                <genericFilter id="genericFilter" dataLoader="copyrightsDl" themeNames="small" alignSelf="START" opened="false">
                    <properties include=".*"/>
                </genericFilter>
                <simplePagination id="pagination" dataLoader="copyrightsDl" alignSelf="END" />
            </hbox>
            <dataGrid classNames="occtet-grid" id="copyrightsDataGrid"
                      width="100%"
                      minHeight="30em"
                      dataContainer="copyrightsDc"
                      columnReorderingAllowed="false"
                      detailsVisibleOnClick="false">
                <columns resizable="true">
                    <column property="copyrightText" header="msg://copyrightDetailView.title" width="50%"/>
                    <column property="garbage" header="msg://eu.occtet.bocfrontend.entity/Copyright.garbage" editable="true"/>
                </columns>
            </dataGrid>
            <hbox >
                <button id="markButton" text="msg://Changegarbagevaluefromselectedcopyrights" themeNames="primary" visible="false"/>
                <button id="saveButton" text="msg://saveChanges" themeNames="primary" visible="false"/>
                <button id="exitButton" text="msg://exit" visible="false" themeNames="error"/>
            </hbox>
        </vbox>
    </layout>
</view>
