<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://searchTermsProfileListView.title"
      focusComponent="searchTermsProfilesDataGrid">
    <data readOnly="true">
        <collection id="searchTermsProfilesDc"
                    class="eu.occtet.bocfrontend.entity.appconfigurations.SearchTermsProfile">
            <fetchPlan extends="_base"/>
            <loader id="searchTermsProfilesDl">
                <query>
                    <![CDATA[select e from SearchTermsProfile e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <simplePagination id="pagination" dataLoader="searchTermsProfilesDl"/>
        </hbox>

        <dataGrid id="searchTermsProfilesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="searchTermsProfilesDc"
                  selectionMode="MULTI">
            <actions>
            </actions>
            <columns>
                <column property="name" filterable="true" header="msg://eu.occtet.bocfrontend.view.project/Project.searchTermsProfile.dataGrid.column.name"/>
            </columns>
            <emptyStateComponent>
                <vbox width="100%" height="100%" justifyContent="CENTER" alignItems="CENTER">
                    <span text="msg://eu.occtet.bocfrontend.view.searchtermsprofile/searchTermsProfileListView.emptyGridMessage"
                          classNames="text-secondary"
                          themeNames="badge contrast"/>
                </vbox>
            </emptyStateComponent>
        </dataGrid>

        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>