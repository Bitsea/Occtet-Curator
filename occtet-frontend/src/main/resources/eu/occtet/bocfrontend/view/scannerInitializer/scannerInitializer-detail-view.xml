<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://scannerInitializerDetailView.title"
      focusComponent="form">
    <data>
        <instance id="scannerInitializerDc"
                  class="eu.occtet.bocfrontend.entity.ScannerInitializer">
            <loader/>
        </instance>
        <collection id="configurationsDc" class="eu.occtet.bocfrontend.entity.Configuration">
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <settings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose" icon="lumo:checkmark"/>
        <action id="closeAction" type="detail_close" icon="lumo:cross"/>
    </actions>
    <layout>
        <image id="iconPlaceholder" width="80px" height="80px"/>
        <h3 id="scannerField"/>
        <h6 id="description"/>
        <formLayout id="form" dataContainer="scannerInitializerDc" width="100%" labelsPosition="ASIDE">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="3"/>
            </responsiveSteps>
            <formItem label="project">
                <comboBox id="projectComboBox"  allowCustomValue="false" title="Projects" colspan="1" css="margin-left: 15px"/>
            </formItem>
            <span colspan="2"/>
            <formItem label="status">
                <textField id="statusField" property="status"  visible="false" colspan="1" css="margin-left: 15px">CREATING
                </textField>
            </formItem>
            <span colspan="2"/>
            <formItem colspan="2" label="configuration">
                <vbox>
                    <hbox id="buttonsPanel">
                        <button id="editBtn" enabled="false" text="edit" />
                        <button id="removeBtn" enabled="false" text="remove" action="configurationsDataGrid.remove" />
                        <simplePagination/>
                    </hbox>
                    <dataGrid classNames="occtet-grid" id="configurationsDataGrid"  width="100%" metaClass="Configuration"  editorBuffered="true" themeNames="row-stripes">
                        <columns>
                            <column property="name" resizable="true" editable="false"/>
                            <column property="value" resizable="true" editable="true"/>
                        </columns>
                        <actions>
                            <action id="edit" type="list_edit"/>
                            <action id="remove" type="list_remove"/>
                        </actions>
                    </dataGrid>
                </vbox>
            </formItem>
        </formLayout>
        <hbox id="editActions" spacing="true">
            <button id="saveAndCloseBtn" action="saveAction" text="start scanner"/>
            <button id="closeBtn" action="closeAction" />
        </hbox>
    </layout>
</view>
