<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://eu.occtet.bocfrontend.view.searchtermsprofile/SearchTermsProfileDetailView.title">
    <data>
        <instance id="searchTermsProfileDc"
                  class="eu.occtet.bocfrontend.entity.appconfigurations.SearchTermsProfile">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <vbox id="form" height="100%">
            <formLayout id="formLayout" width="100%" dataContainer="searchTermsProfileDc">
                <textField id="nameField" property="name" width="5em"
                           label="msg://eu.occtet.bocfrontend.view.searchtermsprofile/SearchTermsProfileDetailView.name" colspan="2"
                           requiredMessage="msg://eu.occtet.bocfrontend.view.searchtermsprofile/SearchTermsProfileDetailView.requieredmessage"/>

                <textArea id="searchTermsField" colspan="2"
                          label="msg://eu.occtet.bocfrontend.view.searchtermsprofile/SearchTermsProfileDetailView.searchTerms"
                          height="20em"
                          width="100%"/>
            </formLayout>
        </vbox>
        <hbox id="detailActions" alignSelf="END">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>