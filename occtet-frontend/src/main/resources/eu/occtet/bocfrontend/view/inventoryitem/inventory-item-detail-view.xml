<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://inventoryItemDetailView.title"
      focusComponent="form">
    <data>
        <instance id="inventoryItemDc"
                  class="eu.occtet.bocfrontend.entity.InventoryItem">
            <fetchPlan extends="_base">
                <property name="softwareComponent" fetchPlan="_base"/>
                <property name="parent" fetchPlan="_base">
                    <property name="inventoryName"/>
                </property>
            </fetchPlan>
            <loader id="inventoryItemDl"/>
        </instance>
        <collection id="copyrightsDc"
                    class="eu.occtet.bocfrontend.entity.Copyright">
            <fetchPlan extends="_base"/>
            <loader id="copyrightsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Copyright e]]>
                </query>
            </loader>
        </collection>
        <collection id="licenseDc"
                    class="eu.occtet.bocfrontend.entity.License">
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <tabSheet width="100%" themeNames="no-padding" height="100%">
            <tab id="generalInformationTab" label="msg://eu.occtet.bocfrontend.view.inventoryitem/inventoryList.tab.general.label" >
                <vbox alignItems="CENTER" justifyContent="START" alignSelf="START" height="100%">
                    <formLayout id="form" dataContainer="inventoryItemDc" width="100%" alignSelf="CENTER">
                        <vbox id="inventoryNameField" width="100%"/>
                        <hbox>
                            <comboBox id="projectField" label="msg://eu.occtet.bocfrontend.entity/InventoryItem.project" required="true"/>
                            <textField id="sizeField" property="size" label="msg://eu.occtet.bocfrontend.entity/InventoryItem.size" width="10%"/>
                            <textField id="linkingField" property="linking" label="msg://eu.occtet.bocfrontend.entity/InventoryItem.linking" width="10%"/>
                            <hbox>
                                <checkbox id="curatedField" property="curated" label="msg://eu.occtet.bocfrontend.entity/InventoryItem.curated" alignSelf="END"/>
                                <checkbox id="wasCombinedField" property="wasCombined" label="msg://eu.occtet.bocfrontend.entity/InventoryItem.wasCombined" alignSelf="END"/>
                            </hbox>
                        </hbox>
                        <hbox width="100%">
                            <comboBox id="parentField" property="parent"
                                       label="msg://eu.occtet.bocfrontend.entity/InventoryItem.parent" width="25em" css="margin-left: 30px"/>
                            <button id="parentButton" text="msg://showParent"
                                    width="15em" alignSelf="END"/>
                        </hbox>
                        <hbox width="100%">
                            <comboBox id="softwareComponentField" label="msg://eu.occtet.bocfrontend.entity/InventoryItem.softwareComponent" width="25em"
                                      required="false"/>
                            <button id="softwareComponentButton" text="msg://eu.occtet.bocfrontend.view.inventoryitem/button.showComponent" width="15em" alignSelf="END"/>
                        </hbox>
                        <vbox id="auditNotesText" width="100%" height="100%"/>
                        <vbox spacing="true" alignItems="CENTER" width="50%" padding="false">
                        <dataGrid id="licensesDataGrid"
                                  width="100%"
                                  height="20em"
                                  dataContainer="licenseDc">
                            <columns>
                                <column property="licenseType" header="msg://eu.occtet.bocfrontend.entity/License"/>
                            </columns>
                        </dataGrid>
                        <hbox>
                            <dropdownButton id="editLicense" text="edit" icon="lumo:edit"
                                            dropdownIndicatorVisible="false" themeNames="small">
                                <items>
                                    <componentItem id="createLicense">
                                        <hbox padding="false">
                                            <span text="msg://eu.occtet.bocfrontend.view.inventoryitem/button.dropdown.create"/>
                                        </hbox>
                                    </componentItem>
                                    <componentItem id="addLicense">
                                        <hbox padding="false">
                                            <span text="msg://eu.occtet.bocfrontend.view.inventoryitem/button.dropdown.add"/>
                                        </hbox>
                                    </componentItem>
                                    <componentItem id="removeLicense">
                                        <hbox padding="false">
                                            <span text="msg://eu.occtet.bocfrontend.view.inventoryitem/button.dropdown.remove"/>
                                        </hbox>
                                    </componentItem>
                                </items>
                            </dropdownButton>
                            <button id="removeLicenseButton" icon="TRASH" visible="false" themeNames="error small"/>
                        </hbox>
                        </vbox>

                    </formLayout>
                    <hbox id="detailActions" justifyContent="CENTER" alignItems="CENTER" alignSelf="CENTER" height="100%">
                        <button id="saveAndCloseButton" action="saveAction" alignSelf="END"/>
                        <button id="closeButton" action="closeAction" alignSelf="END"/>
                    </hbox>
                </vbox>
            </tab>
            <tab id="copyrightsTab" label="msg://eu.occtet.bocfrontend.entity/InventoryItem.copyrights">
                <vbox alignItems="CENTER" height="100%">
                    <dataGrid id="copyrightsDataGrid"
                              width="100%"
                              dataContainer="copyrightsDc"
                              columnReorderingAllowed="true"
                              classNames="occtet-grid">
                    <columns resizable="true">
                        <column property="copyrightText" header="msg://eu.occtet.bocfrontend.entity/Copyright.copyrightText"/>
                        <column property="curated" header="msg://eu.occtet.bocfrontend.entity/Copyright.curated"/>
                        <column property="garbage" header="msg://eu.occtet.bocfrontend.entity/Copyright.garbage"/>
                    </columns>
                    </dataGrid>
                    <hbox>
                        <button id="addCopyrightButton" text="add copyright" themeNames="primary"/>
                        <button id="removeCopyrightButton" icon="TRASH" themeNames="error"/>
                    </hbox>
                </vbox>
            </tab>
        </tabSheet>
    </layout>
</view>
